# test self-recursive functions

fun fib(n: Int): Int
   if n == 0 -> 0
   elif n == 1 -> 1
   else -> fib(n - 1) + fib(n - 2)

__intrin_print_int32(fib(10))

# test mutually recursive functions

fun foo(x: Int)
   if x < 10
      bar(x + 2)

fun bar(x: Int)
   if x < 20
      foo(x - 1)

foo(0)

# test return statement

fun nop()
   return

nop()

fun fac(n: Int): Int
   var i = 0
   var x = 1
   while true
      if i >= n
         return x
      x = x * i
      i = i + 1
   x


__intrin_print_int32(fac(10))
